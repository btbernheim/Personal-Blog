<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div id="sidebar">
  		<div id="logo">
  			<%= link_to root_path do %>
  				<%= image_tag("logo.png", :alt => "rss feed", :height =>"35", :width => "58") %>
  			<% end %>	
  		</div>
  		<ul>
  			<li class="category">Website</li>

        <% if !current_page?(root_path) %>
  			 <li><%= link_to "Blog", root_path %></li>
        <% end %>

        <% if !current_page?(about_index_path) %>
  			 <li><%= link_to "About", about_index_path %></li>
        <% end %>

  		</ul>

  		 <ul>
  			<li class="category">Social</li>
  			<li><a href="https://www.linkedin.com/in/btbernheim/">LinkedIn</li>
  			<li><a href="https://github.com/btbernheim">GitHub</li>
  			<li><a href="https://www.facebook.com/brian.bernheim">FaceBook</li>
  		</ul>

      <% if !user_signed_in? %>
        <p class="sign_in">Admin Login</p>
      <% end %>
  	</div>

  	<div id="main_content">
  		<div id="header">
        <% if current_page?(root_path) %>
    		  <p>All Posts</p>
        <% else %>
          <%= link_to "Back To All Posts", root_path %>
        <% end %>

        <% if user_signed_in? %>
    			<div class="buttons">
    				<button class="button"><%= link_to "New Post", new_post_path %></button>
    				<button class="button">Log Out</button>
    			</div>
        <% end %>
  		</div>

  		<% flash.each do |name, msg| %>
  			<%= content_tag(:div, msg, class: "alert") %>
  			<!-- content_tag() builds an HTML5 block tag of name and content -->
  		<% end %>

  	</div>

    <%= yield %>

  </body>
</html>
